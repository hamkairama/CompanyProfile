@using CompanyProjectModel;
@using CompanyProjectHelper;

@if (ViewBag.DataPortfolio != null)
{
    foreach (T_PORTFOLIO portfolio in ViewBag.DataPortfolio)
    {
        <div class="portfolio-modal modal fade" id="@portfolio.id" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="close-modal" data-dismiss="modal">
                        <div class="lr">
                            <div class="rl"></div>
                        </div>
                    </div>
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-8 mx-auto">
                                <div class="modal-body">
                                    <!-- Project Details Go Here -->
                                    <h2 class="text-uppercase">@portfolio.portfolio_nm</h2>
                                    <p class="item-intro text-muted"></p>
                                    @if (portfolio.img != null)
                                    {
                                        <img class="img-fluid d-block mx-auto" src="data:image/png;base64,@System.Convert.ToBase64String(portfolio.img)" />
                                    }
                                    else
                                    {
                                        <img id="txtImage" class="img-fluid d-block mx-auto" src="data:image/png;base64," style="display:none" />
                                    }
                                    <p>@portfolio.portfolio_desc</p>
                                    <ul class="list-inline">
                                        <li>Date: @portfolio.portfolio_start.Value.ToString("MM yyyy")</li>
                                        <li>Client: @portfolio.portfolio_client</li>
                                        <li>Category: @portfolio.portfolio_category</li>
                                    </ul>
                                    <button class="btn btn-primary" data-dismiss="modal" type="button">
                                        <i class="fa fa-times"></i>
                                        Close Project
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}


 