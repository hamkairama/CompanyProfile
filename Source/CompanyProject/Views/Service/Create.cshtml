@model CompanyProjectModel.T_SERVICE
@using CompanyProjectHelper

@if (ViewBag.msgSuccess != null)
{
    <div class="alert alert-success">
        <a href="#" class="close" type="button" data-dismiss="alert">
            <i class="ace-icon fa fa-times"></i>
        </a>
        <strong>
            <i class="ace-icon fa fa-check"></i>
        </strong>
        @ViewBag.msgSuccess
        <br>
    </div>
}


@if (ViewBag.msgError != null)
{
    <div class="alert alert-danger">
        <a href="#" class="close" type="button" data-dismiss="alert">
            <i class="ace-icon fa fa-times"></i>
        </a>
        <strong>
            <i class="ace-icon fa fa-times"></i>
        </strong>
        @ViewBag.msgError
        <br>
    </div>
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="container">
            <div class="row">
                <div class="col-md-6 mx-auto">
                    <div class="modal-body text-md-center">

                        <div class="form-horizontal">
                            <div class="form-group">
                                <div class="col-md-10">
                                    <h4>Create Service</h4>
                                    <hr />
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-10">
                                    <span class="required">Name</span>
                                    <input type="text" class="form-control item-required text-center" id="txtServiceName" />
                                    <label id="required_txtServiceName" style="display:none"></label>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-10">
                                    <span class="required">Description</span>
                                    <input type="text" class="form-control item-required text-center" id="txtDescription" />
                                    <label id="required_txtDescription" style="display:none"></label>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-10">
                                    <span class="required">Class Property</span>
                                    <input type="text" class="form-control item-required text-center" id="txtClassProp" />
                                    <label id="required_txtClassProp" style="display:none"></label>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-10">
                                    <img id="txtImage" src="data:image/png;base64," style="display:none" />
                                    <a href="#" id="btnBrowse" onclick="GetFile()" class="btn btn-sm btn-white btn-default btn-round">@Labels.ButtonBrowseFile()</a>
                                    <input type="file" id="postedFile" style="display:none" />
                                </div>
                            </div>
                        </div>

                        <div class="form-horizontal">
                            <div class="form-actions col-md-10">
                                <a href="#" class="@Labels.ButtonClass("Create")" onclick="ServiceActionCreate()">
                                    <i class="ace-icon fa fa-floppy-o bigger-125"></i>
                                    @Labels.ButtonSaveForm("Create")
                                </a>
                                <a href="#modalDialog" class="@Labels.ButtonClass("Back")" onclick="ModalCreate('Service/Index/', '#modalDialog')" data-toggle="modal" title="Service">
                                    <i class="ace-icon fa fa-times red bigger-125"></i>
                                    @Labels.ButtonCancelForm()
                                </a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

