@using CompanyProjectModel;
@using CompanyProjectHelper;

@if (ViewBag.DataAbout != null)
{
    <section id="about">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading text-uppercase">About</h2>
                    <h3 class="section-subheading text-muted"></h3>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <ul class="timeline">
                        @foreach (T_ABOUT about in ViewBag.DataAbout)
                        {
                            <li class="@about.class_prop">
                                <div class="timeline-image">
                                    @if (about.img != null)
                                    {
                                        <img class="rounded-circle img-fluid" src="data:image/png;base64,@System.Convert.ToBase64String(about.img)" />
                                    }
                                    else
                                    {
                                        <img class="mx-auto rounded-circle" src="data:image/png;base64," />
                                    }
                                </div>
                                <div class="timeline-panel">
                                    <div class="timeline-heading">
                                        <h4>@about.project_start.Value.ToString("yyyy") - @about.project_end.Value.ToString("yyyy")</h4>
                                        <h4 class="subheading">@about.project_nm</h4>
                                    </div>
                                    <div class="timeline-body">
                                        <p class="text-muted">@about.project_desc</p>
                                    </div>
                                </div>
                            </li>
                        }
                                                
                        <li class="timeline-inverted">
                            <div class="timeline-image">
                                <h4>
                                    Be Part
                                    <br>Of Our
                                    <br>Story!
                                </h4>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
}
